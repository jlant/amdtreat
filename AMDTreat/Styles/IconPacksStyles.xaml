    <!-- IconPackEntypo -->
    <Style x:Key="MyIconPackEntypoHeaders" TargetType="{x:Type iconPacks:PackIconEntypo}" BasedOn="{StaticResource MahApps.Metro.Styles.PackIconEntypo}">
        <Setter Property="Width" Value="20" />
        <Setter Property="Height" Value="20" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="Opacity" Value="0.6" />
        <Setter Property="Margin" Value="10,5,5,3" />
    </Style>

    <Style x:Key="MyIconPackEntypoHeadersTreatmentSystem" TargetType="{x:Type iconPacks:PackIconEntypo}" BasedOn="{StaticResource MyIconPackEntypoHeaders}">
        <Setter Property="Margin" Value="10,5,0,3" />
    </Style>

    <Style x:Key="MyIconPackEntypoToolsButton" TargetType="{x:Type iconPacks:PackIconEntypo}" BasedOn="{StaticResource MahApps.Metro.Styles.PackIconEntypo}" >
        <Setter Property="Width" Value="30" />
        <Setter Property="Height" Value="30" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Margin" Value="0" />
    </Style>
    
